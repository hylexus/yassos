<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean class="io.github.hylexus.yassos.support.auth.user.SimpleJdbcUserDetailService">
        <constructor-arg type="org.springframework.jdbc.core.JdbcTemplate" ref="jdbcTemplate"/>
        <constructor-arg type="java.lang.String">
            <value>
                select id as userId, name as username, password, locked, credential_expired, avatarUrl
                from yassos_user
                where name = ?
            </value>
        </constructor-arg>
    </bean>

</beans>